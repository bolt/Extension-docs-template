{% if not pagetitle and menu is iterable %}
    {% set pagetitle = "" %}
    {% for filename, item in menu %}
        {% if filename|replace({'.md': '.html'}) == currentFile|replace({'.md': '.html'}) %}
            {% set pagetitle = item.label|striptags %}
        {% endif %}
    {% endfor %}
{% endif %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% if pagetitle %}{{ pagetitle }} &raquo; {% endif %}{{ title }}</title>

        <link rel="stylesheet" href="{{ baseUrl }}/css/main.css">
        <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro|Source+Sans+Pro:300,400,700" rel="stylesheet">
    </head>
    <body>

        <div class="docs">
            <aside class="docs__sidebar">
                <div class="docs__sidebar--brand">
                    <div class="brand">
                        <a class="brand--text" href="{{ baseUrl }}/">
                            {{ title|default('The title') }}
                        </a>
                    </div>
                </div>

                {% if menu is iterable %}

                    <nav id="sidebar" class="docs__sidebar--menu menu" role="navigation">
                        <ul class="menu-list">
                            {% for filename, item in menu %}
                                {% set filename = filename|replace({'.md': '.html'}) %}
                                {% set currentFile = currentFile|replace({'.md': '.html'}) %}
                                <li class="{{ item.class|default() }}">
                                    <a href="{{ item.absoluteUrl|default(baseUrl ~ '/' ~ filename) }}" class="{{ filename == currentFile ? 'is-active' }}">
                                        {{ item.label|raw }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>

                {% endif %}

                <div class="{{ menu ? 'container-fluid' : 'container' }}">
                    <p class="text-muted">
                        Website generated with <a href="http://couscous.io" title="Markdown website generator">Couscous</a>
                    </p>
                </div>
            </aside>
            <main class="docs__main">
                <header class="docs__main--header">

                    {# Tipue Search form #}
                    <div class="column is-8">
                        <form action="{{ baseUrl }}/search.html" class="control has-icons-right">
                            <input class="input" type="text" name="q" id="tipue_search_input" pattern=".{3,}" title="At least 3 characters" placeholder="Searchâ€¦" required>
                            <span class="icon is-small is-right">
                                <i class="icon-search"></i>
                            </span>
                        </form>
                    </div>

                    {% if github is defined %}
                        <a href="https://github.com/{{ github.user }}/{{ github.repo }}">
                            <img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png">
                        </a>
                    {% endif %}

                </header>

                <div class="docs__main--breadcrumbs">
                    <div class="pagetitle">
                        {{ pagetitle|default(subTitle)|default('This is the default subtitle!') }}
                    </div>
                </div>

                <div class="docs__main--body">

                    <section id="content" class="content">
                        {{ content|raw }}
                    </section>

                </div>
            </main>

        </div>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <script>
        var tipuesearch_pages = [
        {%- if menu is iterable -%}
            {%- for filename, item in menu -%}
                "{{ baseUrl }}/{{ filename|replace({'.md': '.html'}) }}" {%- if not loop.last %}, {% endif %}
            {%- endfor -%}
        {%- endif -%}
        ];
        </script>


        <script src="{{ baseUrl }}/tipuesearch/tipuesearch_set.js"></script>
        <script src="{{ baseUrl }}/tipuesearch/tipuesearch.min.js"></script>
        <script src="{{ baseUrl }}/js/bundle.js"></script>

        <script>

            hljs.initHighlightingOnLoad();

            $(document).ready(function() {
                $('#tipue_search_input').tipuesearch({
                    'mode': 'live',
                    'liveDescription': '#content',
                    'liveContent': '#content'
                });
            });

        </script>

    </body>
</html>
